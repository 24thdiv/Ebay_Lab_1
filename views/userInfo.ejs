<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Ebay Account</title>

    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.8/angular.min.js"></script>
    <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.4.0/angular-messages.js"></script>
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <!-- jQuery library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <!-- Latest compiled JavaScript -->
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <!-- <script type="text/css" src="stylesheets/SignIn.css"></script>-->
    <link rel="stylesheet" href="../stylesheets/style.css">
    <link rel="stylesheet" href="../stylesheets/include.css">
    <link rel="stylesheet" href="../stylesheets/user.css">
    <link rel="stylesheet" href="../stylesheets/home.css">
    <script src="../controllers/accountController.js"></script>

</head>

<script>

    window.handle = '<%=handle%>';

</script>

<body ng-app = "accoutMan" ng-controller="accoutMan" ng-init="loaduserInfo()">
<% include include.ejs %>
<div id="cover_wrapper" align="center">
    <img id="cover_handler" class="cov_img img" data-src="http://p.ebaystatic.com/aw/social/profile_coverimg_wood.jpg" style="top:0px;" alt="cover image" src="http://p.ebaystatic.com/aw/social/profile_coverimg_wood.jpg">
</div>
<div class="sz1200 idx_crd no_feedback">
    <div class="shad"></div>

    <div class="usrimg media">
        <div class="icon">
            <span class="cll">
                <img class="prof_img img" src="http://p.ebaystatic.com/aw/social/avatar.png" >
            </span>
        </div>
    </div>

    <div class="userinfo">

        <div class="mbg">
            <span class="mbg-1">
                <a class="mbg-id">{{handle}}</a>
            </span>
        </div>
    </div>


    <div class="editidx global_btn" ng-show="hidebutton">
        <a href="/accountManagement"><button id="edit" class="editBtn edits btn btn-ter btn-s" title="Edit profile">Edit profile</button></a>

    </div>

</div>

<div class="container">
<div  class="selling b-space3">
    <div class="selling_info b-space2">

        <h2 id="selling_title fl"><span class="sell_ttl">Items for Sell</span></h2>
    </div>

    <div id="products" class="row list-group">
        <div class="item  col-xs-4 col-lg-4" ng-repeat = "item in items">
            <div class="thumbnail">
                <a href="/product_details/?id={{item.product_id}}"> <img class="group list-group-image" src="http://placehold.it/400x250/000/fff" alt="" /></a>
                <div class="caption">
                    <b><h4 class="group inner list-group-item-heading">
                            {{item.product_name}}</h4></b>
                    <p class="group inner list-group-item-text">
                        {{item.details}}
                    </p>
                    <div class="row">
                        <div class="col-xs-12 col-md-6">
                            <p class="lead">
                                Price: ${{item.price}}</p>
                        </div>
                        <div class="col-xs-12 col-md-6" ng-if="item.isAuction=='Yes'">
                            <span class="glyphicon glyphicon-bullhorn"></span><span class="group inner list-group-item-text">On Auction</span>
                        </div>

                    </div>
                </div>
            </div>
        </div>

    </div>


</div>
    </div>





</div>
</div>



</body>
</html>