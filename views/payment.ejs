<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Ebay-Payment</title>
</head>
<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.8/angular.min.js"></script>
<script src="//ajax.googleapis.com/ajax/libs/angularjs/1.4.0/angular-messages.js"></script>
<!-- Latest compiled and minified CSS -->
<link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
<!-- jQuery library -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
<!-- Latest compiled JavaScript -->
<script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

<script src="https://cdn.datatables.net/1.10.12/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.12/js/dataTables.bootstrap.min.js"></script>

<!-- <script type="text/css" src="stylesheets/SignIn.css"></script>-->
<link rel="stylesheet" href="stylesheets/style.css">
<link rel="stylesheet" href="stylesheets/include.css">
<link rel="stylesheet" href="stylesheets/home.css">

<link rel="stylesheet" href="stylesheets/shoppingCart.css">
<link rel="stylesheet" href="stylesheets/payment.css">

<script src="controllers/productController.js"></script>



<script>

    window.buy='<%=buy%>';

        window.req_quantity =<%= req_quantity %>;
        window.product_id =<%= product_id %>;


</script>

<body ng-app="product" ng-controller="product" ng-init="loadPaymentPage()">

<div class="container">
    <div id="PageTitle">


        <div class="col-sm-8 col-sm-offset-1">
            <div class="row">
                <table style="width:100%">
                    <tbody>
                    <tr>

                        <td width="6%">

                            <h1>

                                <a href="/" ><font color="#f8f8f8">!</font>
                                    <img role="presentation" width="250" height="200" style="clip:rect(47px, 118px, 95px, 0px); position:absolute; top:-30px;left:0" alt="" src="https://ir.ebaystatic.com/rs/v/fxxj3ttftm5ltcqnto1o4baovyl.png" id="gh-logo">
                                </a><!--<![endif]-->
                            </h1>
                        </td>
                        <td width="20%">
                            <h1 class="mb15 nowrap">Checkout</h1>
                        </td>
                        <td width="12%">
                            <a href="javascript:;" id="surveyLink" class="fs14" >How do you like our checkout?</a>
                        </td>
                    </tr>

                    </tbody>
                </table>

            </div>

        </div>




        <div class="col-md-2">

        </div>
        <div class="clearfix" style="clear:both;"></div>
    </div>
</div>





<div class="container col-md-11 col-md-offset-2">

<div class="mainContent">
    <div class="row" ng-show="alert">
        <div class="col-md-6 alert alert-danger">
        <p align="center">You Order cannot Process this time. Please try after some time.</p>
        </div>
    </div>

    <div class="left col-md-6" >
        <div>

            <div class="row">
                <h2 style="color: #767676; font-size: 18px;">Pay with</h2>
                <div class="bod">
                    <div class="whiteBg borderRound">
                        <div class="radio-inline">
                            <label><input type="radio" name="group" value="1"
                                          data-toggle="collapse" data-parent="#credit_input"
                                          href="#collapseOne">Credit or debit card</label>
                        </div>
                    </div>
                    <div class="panel-group" id="credit_input">
                        <div class="panel panel-default">
                            <div id="collapseOne" class="panel-collapse collapse out">
                                <div class="panel-body">
                                    <form class="form-horizontal" name="payment" role="form" nonvalidate>
                                        <fieldset>
                                            <legend>Card detail</legend>
                                            <div class="form-group">
                                                <label class="col-sm-3 control-label" for="card-number">Card
                                                    Number</label>
                                                <div class="col-sm-9">
                                                    <input type="text" class="form-control" name="cardnumber"
                                                           ng-model="cardnumber" id="cardnumber" placeholder="Credit Card Number" required>
                                                    <div style="color: red">{{number_invalid}}</div>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="col-sm-3 control-label">Expiration
                                                    Date</label>
                                                <div class="col-xs-3">
                                                   <!-- <input type="text" class="form-control" placeholder="mm"
                                                           ng-model="expMonth" id="expMonth" name="expMonth"  required/>
                                                   -->

                                                    <select class="form-control col-sm-2" ng-model="expMonth" name="expiryMonth" id="expiry-month" required>

                                                        <option value="0">Jan (01)</option>
                                                        <option value="1">Feb (02)</option>
                                                        <option value="2">Mar (03)</option>
                                                        <option value="3">Apr (04)</option>
                                                        <option value="4">May (05)</option>
                                                        <option value="5">June (06)</option>
                                                        <option value="6">July (07)</option>
                                                        <option value="7">Aug (08)</option>
                                                        <option value="8">Sep (09)</option>
                                                        <option value="9">Oct (10)</option>
                                                        <option value="10">Nov (11)</option>
                                                        <option value="11">Dec (12)</option>
                                                    </select>



                                                    <div style="color: red">{{date_invalid}}</div>
                                                </div>
                                                <div class="col-xs-3">
                                                    <input type="textcvv" class="form-control"
                                                           ng-model="expYear" placeholder="yyyy" id="expYear" name="expYear" required />
                                                    <div style="color: red">{{date_invalid}}</div>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="col-sm-3 control-label" for="cvv">Card
                                                    CVV</label>
                                                <div class="col-sm-3">
                                                    <input type="text" class="form-control" name="cvv"
                                                           ng-model="cvv" id="cvv" placeholder="Security Code" required>
                                                    <div style="color: red">{{cvv_invalid}}</div>
                                                </div>
                                            </div>

                                        </fieldset>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>

        <div>

            <div class="row">
                <h2 style="color: #767676; font-size: 18px;">Ship to</h2>
                <div class="whiteBg borderRound bod">
                    <div>
                        <div id="address" ng-model="address">{{user[0].address}}</div>
                        <div id="city" ng-model="city">{{user[0].city}}</div>
                        <div id="zip" ng-model="zip">{{user[0].pin_code}}</div>
                        <div id="contact_info" ng-model="contact_info">{{user[0].mobile_no}}</div>
                    </div>
                    <div>
                        <a href ng-click="change()"><span style="color: blue;">change</span></a>
                    </div>
                </div>

            </div>
        </div>

        <div class="row">


            <h2 style="color: #767676; font-size: 18px;">Review item and
                shipping</h2>

            <div>

                <div class = "panel panel-default" ng-repeat="p in product">
                    <div class = "panel-heading" style="background-color: white">Seller <span style="color: #0654ba">{{p.first_name}} {{p.last_name}}</span></div>


                    <table class="table table-hover" style="background-color: white">
                        <tbody>
                        <tr>
                            <td class="col-md-6">
                                <div class="media">
                                    <a class="thumbnail pull-left" href="#"> <img class="media-object" src="http://icons.iconarchive.com/icons/custom-icon-design/flatastic-2/72/product-icon.png" style="width: 72px; height: 72px;"> </a>
                                    <div class="media-body" align="center">
                                        <h4 style="color:#0654ba ">  &nbsp; &nbsp;&nbsp;{{p.product_name}}</h4>

                                        &nbsp;&nbsp;&nbsp;  <span><b>Description:</b> </span><span>{{p.details}}</span>
                                    </div>
                                </div></td>


                            <td>Quantity: </td>
                            <td class="col-sm-1 col-md-1" style="text-align: center">
                                <div class="form-control" id="quan">{{p.req_quantity}}</div>

                            </td>
                            <td class="col-sm-2 col-md-2 text-center"><strong>Price ${{p.price}}</strong></td>

                            <td class="col-sm-2 col-md-2 text-center"><strong ng-model="totaleach">Total: ${{p.total}}</strong></td>

                        </tr>





                        </tbody>
                    </table>

                </div>

            </div>

        </div>
    </div>

    <div class="right col-md-3">

        <div class="in-right bod borderRound">
            <div>
                <table class="width100">
                    <tbody>
                    <tr>
                        <td class="lalign paddingBottom10">Subtotal</td>
                        <td class="ralign paddingBottom10"><span>{{grandtotal}}</span></td>
                    </tr>
                    <tr>
                        <td class="lalign paddingBottom10">Sales tax</td>
                        <td class="ralign paddingBottom10"><span>0.0</span></td>
                    </tr>
                    </tbody>
                </table>
            </div>
            <hr class="width100" style="margin-top: 0px;">
            <div>
                <div>
                    <table class="width100">
                        <tbody>
                        <tr data-type="TOTAL">
                            <td class="lalign"><h4>Order total</h4></td>
                            <td class="ralign"><span><h4>{{grandtotal}}</h4></span></td>
                        </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <div align="center">
                <button type="submit" id="cta-btn" class="btn btn-primary" ng-click="confirmOrder()" ng-disabled="!payment.$valid">Confirm and pay</button>

                <div style="color: red" ng-if="!payment.$valid">Enter Credit Card Details</div>
            </div>
            </div>

        </div>

    </div>

</div>

</body>
</html>